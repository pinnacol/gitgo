    <dl class="comment">
    <dt class="content">Comment</dt>
    <dd class="content"><%= doc.content %></dd>
    <dt class="author">Author</dt>
    <dd class="author"><%= doc.author %></dd>
    <dt class="date">Date</dt>
    <dd class="date"><abbr title="<%= doc.date.iso8601 %>"><%= doc.date.strftime('%Y/%m/%d %H:%M %p') %></abbr></dd><% doc.attributes(false).each_pair do |key, value| %>
    <dt><%= key %></dt>
    <dd><%= value %></dd><% end %><%= erb :_comments, :locals => {:comments => children[doc], :children => children}, :layout => false %>
    </dl>