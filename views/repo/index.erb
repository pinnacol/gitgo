<h1>Gitgo Repo</h1>

<dl>
<dt>Path</dt>
<dd><%= repo.path %></dd>
<dt>Branch</dt>
<dd><%= repo.branch %></dd>
<dt>Commit</dt>
<dd><%= erb :_commit, :locals => {:commit => repo.current }, :views => path('views/code'), :layout => false %></dd>
<dt>Index</dt>
<dd>
  <ul><% keys.each do |key| %>
  <li><a href="<%= url "/repo/idx/#{key}" %>"><%= key %></a></li><% end %>
  </ul>
</dd>
</dl>


<ul>
<li>
  <form class="update" action="<%= url('/repo/reindex') %>" method="post">
    <input type="hidden" name="full" value="true" />
    <input type="submit" value="Reindex" />
  </form>
</li>
<li><a href="<%= url('/repo/status') %>">Status</a></li>
<li><a href="<%= url('/repo/maintenance') %>">Maintenance</a></li>
<li><a href="<%= url('/repo/design') %>">Reference</a></li>
</ul>
