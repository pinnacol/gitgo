  <dl>
  <dt><label for="title">Title</label></dt>
  <dd><input id="title" type="text" name="doc[title]" value="<%= form.title_value doc['title'] %>" /></dd>
  <dt><label for="content">Description</label></dt>
  <dd><textarea id="content" name="doc[content]"><%= form.content_value doc['content'] %></textarea></dd>
  <dt><label for="tags">Tags (comma-separated)</label></dt>
  <dd><input type="text" id="tags" name="doc[tags]" value="<%= form.tags_value doc['tags'] %>" /></dd>
  <dt><label for="state">State</label></dt>
  <dd>
    <select id="state" name="doc[state]"><% form.each_state(doc['state']) do |value, selection, content| %>
    <option value="<%= value %>"<%= html.select(selection) %>><%= content %></option><% end %>
    </select>
  </dd>
  <dt><label for="at">At</label></dt>
  <dd>
    <select id="at" name="doc[at]"><% form.each_ref_name(doc['at'] || head) do |value, selection, content| %>
    <option value="<%= value %>"<%= html.select(selection) %>><%= content %></option><% end %>
    </select>
  </dd>
  <dt><label for="preview">Preview</label></dt>
  <dd><input id="preview" type="checkbox" name="preview" value="true"/></dd>
  <dt><input type="submit" value="<%= submit %>" /></dt>
  <dd></dd>
  </dl>
