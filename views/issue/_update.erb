    
    <dl class="update" active="<%= active?(update['at']) %>">
    <dt class="content">Comment <%= format.sha_a update.sha %></dt>
    <dd class="content"><%= format.content update.content %></dd><% if adds = diff['tags'] %>
    <dt class="tags">Added Tags</dt>
    <dd class="tags"><%= format.tags adds %></dd><% end %><% if removes = diff[:tags] %>
    <dt class="tags">Removed Tags</dt>
    <dd class="tags"><%= format.tags removes %></dd><% end %><% if state = diff['state'] %>
    <dt class="state">Changed State</dt>
    <dd class="state"><%= format.state state %></dd><% end %>
    <dt class="author">Author</dt>
    <dd class="author"><%= format.author update.author %></dd>
    <dt class="date">Date</dt>
    <dd class="date"><%= format.date update.date %></dd>
    <dt class="at">At</dt>
    <dd class="at"><%= format.at update['at'] %></dd>
    </dl>
    