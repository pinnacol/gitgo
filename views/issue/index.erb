<h1>Issues</h1>

<form class="issue" action="/issue/new" method="get">
  <input type="submit" value="New Issue" >
</form>

<form class="issue" action="/issue" method="get">
  <h3>State</h3>
  <ul><% form.each_state(*current_states) do |value, checked, content| %>
  <li><input type="checkbox" name="state[]" value="<%= value %>"<%= form.check(checked) %>><%= content %></input></li><% end %>
  </ul>
  
  <h3>Tags</h3>
  <ul><% form.each_tag(*current_tags) do |value, checked, content| %>
  <li><input type="checkbox" name="tags[]" value="<%= value %>"<%= form.check(checked) %>><%= content %></input></li><% end %>
  </ul>
  
  <h3>Sort</h3>
  <ul>
  <li><input type="radio" name="sort" value="author" <%= form.check(sort_attr == 'author') %>>Author</input></li>
  <li><input type="radio" name="sort" value="date" <%= form.check(sort_attr == 'date') %>>Date</input></li>
  <li><input type="radio" name="sort" value="title" <%= form.check(sort_attr == 'title') %>>Title</input></li>
  <li><input type="checkbox" name="reverse" value="true" <%= form.check(reverse) %>>Reverse</input>
  </ul>
  
  <input type="submit" value="Search" >
</form>

<div class="issues">
  <ul class="issues"><% issues.each do |doc| %>
  <li id="<%= escape_html(doc.sha) %>" active="<%= doc[:active] %>"><%= issue_link(doc) %></li><% end %>
  </ul>
</div>

